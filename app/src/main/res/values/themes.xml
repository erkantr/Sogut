<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sogut" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="AppTheme2" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">#666666</item>
        <item name="colorPrimaryDark">#666666</item>
        <item name="colorAccent">#666666</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#666666</item>
        <item name="colorPrimaryDark">#666666</item>
        <item name="colorAccent">#666666</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->

        <!-- status bar ekran içeriği ekleme -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="timeButton" parent="viewParent">
        <item name="android:background">@drawable/time_background</item>
        <item name="android:textColor">#56C568</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="timeButton2" parent="viewParent">
        <item name="android:background">@drawable/clan</item>
        <item name="android:textColor">#A47F22</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

</resources>