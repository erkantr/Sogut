<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="19dp"
                android:background="#0000ffff"
                android:src="@drawable/ic_coolicon" />

            <TextView
                android:id="@+id/text_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/hakkinda"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <HorizontalScrollView

            android:scrollbarThumbHorizontal="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_about"
                    android:layout_width="343dp"
                    android:layout_height="453dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:elevation="3dp"
                    android:gravity="center"
                    app:cardCornerRadius="5dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/picture1">

                        </ImageView>

                        <TextView
                            android:id="@+id/text_about1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/fatih_demirkan"
                            android:textColor="#E76B12"
                            android:textSize="19sp" />


                        <TextView
                            android:id="@+id/text_about2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/arayuz_tasarimcisi"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_about3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/kisa_bir_yazi"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_about4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/iletisim_adresleri"
                            android:textColor="#2C4EC6"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:id="@+id/linear_about"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/image_about1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:background="@drawable/about_linkedin" />

                            <ImageView
                                android:id="@+id/image_about2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:background="@drawable/about_dribble" />

                            <ImageView
                                android:id="@+id/image_about3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:background="@drawable/about_be" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:id="@+id/cardview_about1"
                    android:layout_width="343dp"
                    android:layout_height="453dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:elevation="3dp"
                    android:gravity="center"
                    app:cardCornerRadius="5dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/picture1">

                        </ImageView>

                        <TextView
                            android:id="@+id/text_about5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/fatih_demirkan"
                            android:textColor="#E76B12"
                            android:textSize="19sp" />


                        <TextView
                            android:id="@+id/text_about6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/arayuz_tasarimcisi"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_about7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/kisa_bir_yazi"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_about8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/iletisim_adresleri"
                            android:textColor="#2C4EC6"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:id="@+id/linear_about1"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/image_about4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:background="@drawable/about_linkedin" />

                            <ImageView
                                android:id="@+id/image_about5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:background="@drawable/about_dribble" />

                            <ImageView
                                android:id="@+id/image_about6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:background="@drawable/about_be" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metin1"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:textColor="#959595"
            android:textSize="12sp"/>


    </LinearLayout>



</RelativeLayout>