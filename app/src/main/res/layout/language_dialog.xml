<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_height="323dp"
    android:elevation="15dp"
    android:id="@+id/main_card"
    android:layout_gravity="center|bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dil_sec"
                    android:layout_width="47dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/dil_sec"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_close_square2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">

                <View
                    android:id="@+id/view_activity"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="5"
                    android:background="#EAEAEA" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_activity2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/tr"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@drawable/ic_tr" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/uk"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="53dp"
                    android:background="@drawable/uk" />

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/ua"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@drawable/ukraine" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_activity3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/ar"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@drawable/ic_arabic" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/pak"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@drawable/ic_pakistan" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/ru"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@drawable/ic_russia" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>