<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_height="323dp"
    android:elevation="15dp"
    android:id="@+id/main_card"
    android:layout_gravity="center|bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_hours"
                android:layout_width="130dp"
                android:layout_height="21dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/acik_olma_saatleri"
                android:textColor="@color/gray800"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_close_square2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <View
                android:id="@+id/view_activity"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5"
                android:background="#EAEAEA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="21dp"
                android:layout_marginTop="24dp"
                android:text="Pazartesi:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="195dp"
                android:text="08:00 - 12:00 • 13:00 - 17:00 "
                android:textColor="@color/gray800"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="38dp"
                android:layout_height="21dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="Salı:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="195dp"
                android:text="08:00 - 12:00 • 13:00 - 17:00 "
                android:textColor="@color/gray800"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="78dp"
                android:layout_height="21dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="81dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="Çarşamba:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="195dp"
                android:text="08:00 - 12:00 • 13:00 - 17:00 "
                android:textColor="@color/gray800"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="27dp"
                android:layout_height="21dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="76dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="Perşembe:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="195dp"
                android:text="08:00 - 12:00 • 13:00 - 17:00 "
                android:textColor="@color/gray800"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp"
                android:layout_height="21dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="48dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="Cuma:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="195dp"
                android:text="08:00 - 12:00 • 13:00 - 17:00 "
                android:textColor="@color/gray800"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="60dp"
                android:layout_height="21dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="Cumartesi:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="92dp"
                android:text="09:00 - 12:30"
                android:textColor="@color/gray800"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="28dp"
                android:layout_height="21dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="44dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:text="Pazar:"
                android:textColor="@color/primary_red"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="45dp"
                android:text="Kapalı"
                android:textColor="@color/primary_red"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="64dp"
                android:layout_height="21dp"/>

        </LinearLayout>

    </LinearLayout>












</androidx.cardview.widget.CardView>